<button
    id="follow-button-{{ .ID }}"
    hx-swap="outerHTML"
    {{ if .Followed  }} hx-delete="/users/{{ .ID }}/follow" {{ else }} hx-post="/users/{{ .ID }}/follow" {{ end }}
    class="btn font-semibold text-xs min-h-0 h-9"
>
    {{ if .Followed  }} Following {{ else }} Follow {{ end }}
</button>
